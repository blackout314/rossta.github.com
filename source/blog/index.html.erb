---
pageable: true
per_page: 5
---
<% content_for(:section) { 'Blog' } %>

<h1>Articles</h1>

<br/>
<section id="blog" class="index-posts">
  <% blog.articles.each do |article| %>
    <article class="index-post">
      <header>
        <h4>
          <%= link_to article.title, article %>
        </h4>
        <% if article.data.alt_title %>
          <p class="alt-title subtle"><%= article.data.alt_title %></p>
        <% end %>
      </header>
    </article>
  <% end %>
</section>
